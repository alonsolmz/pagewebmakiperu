---
export const prerender = false;
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';
import { Image } from 'astro:assets';

const { data: vehiculos, error } = await supabase
  .from('vehiculos')
  .select('*')
  .order('created_at', { ascending: false });

const listaVehiculos = vehiculos || [];
---

<Layout title="MaquiPeru - Catálogo">
  <main class="container">
    <header class="hero">
      <h1>MAQUIPERU</h1>
      <p>Catálogo de Maquinaria Pesada</p>
    </header>

    <div class="grid">
      {listaVehiculos.map((v) => (
        <a href={`/vehiculo/${v.id}`} class="card">
          <div class="image-container">
            <Image src={v.imagen_url} alt={v.nombre} width={400} height={250} />
            <span class="badge">{v.categoria}</span>
          </div>
          <div class="content">
            <h2 class="title">{v.nombre}</h2>
            <p class="price">{v.precio ? `$${Number(v.precio).toLocaleString()}` : "Consultar"}</p>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
    font-family: 'Inter', system-ui, sans-serif;
  }
  .hero {
    text-align: center;
    margin-bottom: 60px;
  }
  .hero h1 {
    font-size: 4rem;
    font-weight: 900;
    margin: 0;
    letter-spacing: -2px;
  }
  .hero p {
    color: #64748b;
    font-size: 1.2rem;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 30px;
  }
  .card {
    text-decoration: none;
    color: inherit;
    background: white;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #f1f5f9;
  }
  .card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1);
  }
  .image-container {
    position: relative;
    height: 220px;
  }
  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .badge {
    position: absolute;
    top: 15px;
    left: 15px;
    background: rgba(15, 23, 42, 0.9);
    color: white;
    padding: 4px 12px;
    border-radius: 99px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
  }
  .content {
    padding: 24px;
  }
  .title {
    margin: 0 0 10px 0;
    font-size: 1.25rem;
    font-weight: 800;
  }
  .price {
    font-size: 1.5rem;
    font-weight: 900;
    color: #0f172a;
    margin: 0;
  }
</style>