---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';
import '../styles/global.css';

// 1. Cargamos los vehículos (se cargarán solo si hay sesión en el cliente)
const { data: vehiculos, error } = await supabase
  .from('vehiculos')
  .select('*')
  .order('created_at', { ascending: false });

if (error) console.error("Error cargando inventario:", error);
---

<Layout title="Gestión Interna | MaquiPeru">
  <main class="min-h-screen bg-[#F5F6F8] p-4 md:p-10 font-sans">
    
    <div id="login-section" class="max-w-md mx-auto mt-20 bg-white p-10 rounded-[32px] shadow-2xl border border-gray-100 hidden">
        <h2 class="text-2xl font-black text-[#0B132B] mb-6 uppercase italic text-center">Acceso Dueño</h2>
        <form id="login-form" class="space-y-4">
            <input type="email" id="email" placeholder="Email" class="w-full p-4 bg-gray-50 border-none rounded-2xl text-sm outline-none focus:ring-2 focus:ring-[#F2B705]" required />
            <input type="password" id="password" placeholder="Contraseña" class="w-full p-4 bg-gray-50 border-none rounded-2xl text-sm outline-none focus:ring-2 focus:ring-[#F2B705]" required />
            <button type="submit" class="w-full bg-[#0B132B] text-white font-black py-4 rounded-2xl uppercase tracking-widest hover:bg-[#F2B705] hover:text-[#0B132B] transition-all">
                Entrar al Panel
            </button>
        </form>
    </div>

    <div id="admin-panel" class="max-w-5xl mx-auto hidden">
      <div class="bg-[#0B132B] rounded-3xl p-8 mb-10 shadow-2xl flex flex-col md:flex-row justify-between items-center gap-4">
        <div>
          <h1 class="text-3xl font-black text-white uppercase tracking-tighter">Panel MaquiPeru</h1>
          <p class="text-[#F2B705] text-sm font-bold italic">Bienvenido, Administrador</p>
        </div>
        <div class="flex gap-4">
            <a href="/" class="bg-white/10 text-white px-6 py-2 rounded-full text-xs font-bold border border-white/20 hover:bg-white/20 transition-all uppercase">Sitio Web</a>
            <button id="btnLogout" class="bg-red-500/20 text-red-500 px-6 py-2 rounded-full text-xs font-bold border border-red-500/20 hover:bg-red-500 hover:text-white transition-all uppercase">Cerrar Sesión</button>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
        <section class="bg-white shadow-xl rounded-[32px] p-8 border border-gray-100 h-fit">
          <h2 class="text-xl font-black text-[#0B132B] mb-8 uppercase italic flex items-center gap-2">
            <span class="w-2 h-8 bg-[#F2B705]"></span> Añadir Equipo
          </h2>
          <form id="uploadForm" class="space-y-5">
            <input type="text" id="nombre" class="w-full p-4 bg-gray-50 border-none rounded-2xl text-sm focus:ring-2 focus:ring-[#F2B705] outline-none" placeholder="Nombre del Equipo" required />
            <div class="grid grid-cols-2 gap-4">
              <select id="categoria" class="w-full p-4 bg-gray-50 border-none rounded-2xl text-sm outline-none cursor-pointer">
                <option value="Linea Amarilla">Línea Amarilla</option>
                <option value="Volquetes">Volquetes</option>
                <option value="Mineria">Minería</option>
              </select>
              <input type="number" id="precio" class="w-full p-4 bg-gray-50 border-none rounded-2xl text-sm outline-none" placeholder="Precio (USD)" required />
            </div>
            <input type="file" id="foto" accept="image/*" class="w-full text-xs text-gray-500 file:mr-4 file:py-3 file:px-6 file:rounded-2xl file:border-0 file:bg-[#0B132B] file:text-white file:font-black cursor-pointer" required />
            <button type="submit" id="btnSubmit" class="w-full bg-[#F2B705] text-[#0B132B] font-black py-5 rounded-2xl uppercase tracking-widest hover:bg-[#0B132B] hover:text-white transition-all shadow-xl">Publicar Ahora</button>
          </form>
        </section>

        <section class="bg-white shadow-xl rounded-[32px] p-8 border border-gray-100">
          <h2 class="text-xl font-black text-[#0B132B] mb-8 uppercase italic flex items-center gap-2">
             <span class="w-2 h-8 bg-[#0B132B]"></span> Control de Catálogo
          </h2>
          <div class="space-y-4 max-h-[500px] overflow-y-auto pr-2 no-scrollbar">
            {vehiculos?.map((v) => (
              <div class={`flex items-center gap-4 p-4 rounded-2xl border transition-all ${v.visible ? 'bg-gray-50 border-gray-100' : 'bg-gray-200 border-dashed border-gray-400 opacity-60'}`}>
                <img src={v.imagen_url} class="w-16 h-16 object-cover rounded-xl shadow-sm" alt={v.nombre} />
                <div class="flex-1">
                  <h3 class="font-black text-[#0B132B] text-xs uppercase leading-tight">{v.nombre}</h3>
                  <p class="text-[9px] font-bold uppercase tracking-widest mt-1">
                    <span class={v.visible ? 'text-green-600' : 'text-red-600'}>{v.visible ? '● VISIBLE' : '○ OCULTO'}</span>
                  </p>
                </div>
                <div class="flex gap-2">
                  <button class="btn-toggle-visible p-3 bg-white rounded-xl shadow-sm hover:text-[#F2B705] transition-colors" data-id={v.id} data-current={v.visible.toString()} data-name={v.nombre}>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                  </button>
                  
                  <button class="btn-delete-vehicle p-3 bg-white rounded-xl shadow-sm hover:text-red-600 transition-colors" data-id={v.id} data-name={v.nombre}>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  </button>
                </div>
              </div>
            ))}
          </div>
        </section>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { supabase } from '../lib/supabase';

  const loginSection = document.getElementById('login-section');
  const adminPanel = document.getElementById('admin-panel');
  const loginForm = document.getElementById('login-form') as HTMLFormElement;

  // 1. Verificar sesión
  const checkSession = async () => {
    const { data: { session } } = await supabase.auth.getSession();
    if (session) {
        adminPanel?.classList.remove('hidden');
        loginSection?.classList.add('hidden');
    } else {
        loginSection?.classList.remove('hidden');
        adminPanel?.classList.add('hidden');
    }
  };
  checkSession();

  // 2. Login
  loginForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const email = (document.getElementById('email') as HTMLInputElement).value;
    const password = (document.getElementById('password') as HTMLInputElement).value;
    const { error } = await supabase.auth.signInWithPassword({ email, password });
    if (error) alert("Acceso denegado: " + error.message);
    else location.reload();
  });

  // 3. Logout
  document.getElementById('btnLogout')?.addEventListener('click', async () => {
    await supabase.auth.signOut();
    location.reload();
  });

  // 4. Subida de Equipos
  const uploadForm = document.getElementById('uploadForm') as HTMLFormElement;
  uploadForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const btn = document.getElementById('btnSubmit') as HTMLButtonElement;
    btn.disabled = true;
    btn.innerText = "SUBIENDO...";

    const file = (document.getElementById('foto') as HTMLInputElement).files?.[0];
    const nombre = (document.getElementById('nombre') as HTMLInputElement).value;
    const categoria = (document.getElementById('categoria') as HTMLSelectElement).value;
    const precio = (document.getElementById('precio') as HTMLInputElement).value;

    if (!file) return;

    try {
      const fileName = `${Date.now()}-${file.name}`;
      const { error: storageError } = await supabase.storage.from('fotos-maquinaria').upload(`vehiculos/${fileName}`, file);
      if (storageError) throw storageError;

      const { data: { publicUrl } } = supabase.storage.from('fotos-maquinaria').getPublicUrl(`vehiculos/${fileName}`);
      await supabase.from('vehiculos').insert([{ nombre, categoria, precio: parseFloat(precio), imagen_url: publicUrl, visible: true }]);
      
      location.reload();
    } catch (err: any) {
      alert(err.message);
      btn.disabled = false;
      btn.innerText = "Publicar Ahora";
    }
  });

  // 5. Cambiar Visibilidad
  document.addEventListener('click', async (e) => {
    const toggleBtn = (e.target as HTMLElement).closest('.btn-toggle-visible') as HTMLButtonElement;
    if (!toggleBtn) return;
    const id = toggleBtn.dataset.id;
    const isVisible = toggleBtn.dataset.current === 'true';
    
    const { error } = await supabase.from('vehiculos').update({ visible: !isVisible }).eq('id', id);
    if (error) alert(error.message);
    else location.reload();
  });

  // 6. ELIMINAR PERMANENTE
  document.addEventListener('click', async (e) => {
    const deleteBtn = (e.target as HTMLElement).closest('.btn-delete-vehicle') as HTMLButtonElement;
    if (!deleteBtn) return;

    const id = deleteBtn.dataset.id;
    const name = deleteBtn.dataset.name;

    if (!confirm(`¿ESTÁS SEGURO? Esta acción eliminará permanentemente la unidad "${name}" del inventario y no se puede deshacer.`)) return;

    try {
      deleteBtn.disabled = true;
      const { error } = await supabase.from('vehiculos').delete().eq('id', id);
      if (error) throw error;
      location.reload();
    } catch (err: any) {
      alert("Error al eliminar: " + err.message);
      deleteBtn.disabled = false;
    }
  });
</script>