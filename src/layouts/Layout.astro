---
// src/layouts/Layout.astro
import Header from '../components/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <meta name="google-site-verification" content="O8dDiF-EDZIsYPFFBJJNiw5v313iwo9HSiGAPOJEPag" />

    <title>{title}</title>
    
    <meta name="description" content="MaquiPeru - Venta y soluciones de maquinaria pesada para minería y construcción civil en Perú." />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">

  </head>
  <body>
    
    <Header />

    <main>
      <slot />
    </main>

    <style is:global>
     
      :root {
        --azul-principal: #0B132B;
        --amarillo-acento: #F2B705;
        --gris-fondo: #F5F6F8;
      }

      * { 
        box-sizing: border-box; 
        margin: 0;
        padding: 0;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        background-color: var(--gris-fondo);
        font-family: 'Inter', sans-serif;
        color: var(--azul-principal);
        overflow-x: hidden;
        line-height: 1.5;
      }

     
      section[id] {
        scroll-margin-top: 90px;
      }

    
      ::selection {
        background-color: var(--amarillo-acento);
        color: var(--azul-principal);
      }
    </style>
  </body>
</html>